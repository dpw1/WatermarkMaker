<nav class="light-blue lighten-1" role="navigation">
	<div class="nav-wrapper container">
		<a id="logo-container" href="#" class="brand-logo"><img class="logo-img" src="images/WaterMarkerIcon.png" alt="Logo Image"></a>
		<ul class="right hide-on-med-and-down">
			{{> navbar-items }}
		</ul>

		<ul id="nav-mobile" class="sidenav">
			{{> navbar-items }}
		</ul>
		<a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
	</div>
</nav>
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<br><br>
		<h1 class="main-header header center is-1 no-pad"><img class="main-logo-img" src="images/WaterMarkerLogoSmall.png" alt=""></h1>
		<div class="row center">
			<h5 class="header col s12 light">Select multiple images. Select Watermark. Download in one click.</h5>
			<h5 class="header col s12 light">High quality and free.</h5>
		</div>
		<div class="row center">

			<div class="file-field input-field">
				<div class="btn blue">
					<span>Images</span>
					<input type="file" id="imageInput" multiple>
				</div>
				<div class="file-path-wrapper">
					<input class="file-path validate" type="text" placeholder="Upload one or more images">
				</div>
			</div>
					<div class="images-list">
								</div>
			<div class="file-field input-field">
				<div class="btn blue">
					<span>Watermark</span>
					<input type="file" id="watermarkInput">
				</div>
				<div class="file-path-wrapper">
					<input class="file-path validate disabled" type="text" placeholder="Add your watermark">
					<div id="wm-box">
						<!-- <img src="#" alt="#" class="wm-thumbnail"> -->
					</div>
				</div>
			</div>
			<div class="wm-transparency">
				<p class="range-field">
					<span>Watermark Transparency<a class="btn blue btn-tooltip tooltipped" data-position="right" data-tooltip="The lower the more transparent">?</a></span>
			      <input class="wm-transparency__range" type="range" id="watermarkTransparency" min="1" max="100" value="100" />
			    </p>
			</div>

			<button id="sendImages" class="btn blue waves-effect waves-light" type="submit" name="action">Download
			    <i class="material-icons right">send</i>
			  </button>
			<div class="images-list" id="finalResult"></div>
		</div>

	</div>
</div>


